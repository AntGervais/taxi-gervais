    <!-- CTA Final -->
    <section class="py-20 bg-gradient-to-br from-slate-900 to-slate-800 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Réservez Votre Transfert Aéroport ou Gare
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          Appelez-moi pour un devis gratuit et sans engagement
        </p>
        <a
          href="tel:0633968023"
          class="inline-block bg-yellow-400 text-slate-900 px-8 py-4 rounded-full font-bold hover:bg-yellow-500 transition transform hover:scale-105 text-lg"
        >
          <i class="fas fa-phone-alt mr-2"></i>
          06 33 96 80 23
        </a>
        <p class="text-gray-400 mt-6 text-sm">
          Disponible 7j/7 - Réservation recommandée 24-48h à l'avance
        </p>
      </div>
    </section>
  </main>
  <Footer />

  <!-- Mobile Call Button -->
  <div class="md:hidden fixed bottom-4 right-4 z-50">
    <a
      href="tel:0633968023"
      aria-label="Appeler Taxi Anthony Gervais"
      class="bg-green-500 text-white w-16 h-16 rounded-full flex items-center justify-center shadow-lg hover:bg-green-600 transition animate-bounce"
    >
      <i class="fas fa-phone-alt text-2xl"></i>
    </a>
  </div>
</Layout>
